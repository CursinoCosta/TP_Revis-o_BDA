CREATE TABLE Cliente
	( Nome VARCHAR(20) NOT NULL,
	  CPF VARCHAR(11) NOT NULL,
	  Endereco VARCHAR(40) NOT NULL,
	  ID INT NOT NULL,
	  PRIMARY KEY (ID));

CREATE TABLE Pedido
	( Data DATE NOT NULL,
	  Status VARCHAR(11) NOT NULL,
	  ID INT NOT NULL,
	  ID_Cliente INT NOT NULL,
	  PRIMARY KEY (ID),
  FOREIGN KEY (ID_Cliente) REFERENCES Cliente(ID));

CREATE TABLE Produto
	( Nome VARCHAR(11) NOT NULL,
	  Fornecedor VARCHAR(11) NOT NULL,
	  ID INT NOT NULL,
	  PRIMARY KEY (ID));

CREATE TABLE Carga
	( Origem VARCHAR(40) NOT NULL,
	  Destino VARCHAR(40) NOT NULL,
	  Entregue BOOL,
	  Descricao VARCHAR(11) NOT NULL,
	  ID INT NOT NULL,
	  ID_Pedido INT NOT NULL,
	  ID_Rota INT NOT NULL,
	  PRIMARY KEY (ID),
  FOREIGN KEY (ID_Pedido) REFERENCES Pedido(ID),
  FOREIGN KEY (ID_Rota) REFERENCES Rota(ID));

CREATE TABLE Carga_Produto
	( ID INT NOT NULL,
	  Quantidade INT,
	  ID_Carga INT NOT NULL,
	  ID_Produto INT NOT NULL,
	  PRIMARY KEY (ID_Carga, ID_Produto),
  FOREIGN KEY (ID_Carga) REFERENCES Carga(ID),
  FOREIGN KEY (ID_Produto) REFERENCES Produto(ID));

CREATE TABLE Rota
	( ID INT NOT NULL,
	  ID_Veiculo INT NOT NULL,
	  PRIMARY KEY (ID),
  FOREIGN KEY (ID_Veiculo) REFERENCES Veiculo(ID));

CREATE TABLE Veiculo
	( Chassi VARCHAR(15) NOT NULL,
	  ID_Motorista INT NOT NULL,
	  Placa VARCHAR(7) NOT NULL,
    ID INT NOT NULL,
	  PRIMARY KEY (ID),
	  FOREIGN KEY (ID_Motorista) REFERENCES Motorista(CPF));

CREATE TABLE Motorista
	( Nome VARCHAR(20) NOT NULL,
	  CNH VARCHAR(15) NOT NULL,
	  CPF VARCHAR(11) NOT NULL,
	  PRIMARY KEY (CPF, CNH));
